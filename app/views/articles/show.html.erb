<p class="notice"><%= notice %></p>

<h1><%= @article.title %></h1>
	<div class="body">
  	<%= raw(@article.body) %>
  </div>
  <div>
  	<span class="badge badge-success">Updated <%= l @article.updated_at.localtime, :format => :short %></span>
    <div class="pull-right"><% if @article.published? %><span class="label label-info">Published</span><% else %><span class="label label-warning">Unpublished</span><% end %> | <span class="glyphicon glyphicon-user"></span> <%= link_to @article.author.name, @article.author %>
    </div>
  </div>
  <hr>
